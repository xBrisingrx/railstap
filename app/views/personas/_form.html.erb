<%= form_for @persona, :html => {class: "g-brd-around g-brd-gray-light-v4 g-pa-30 g-mb-30"} do |form| %>

  <div class="form-group row g-mb-10">
    <%= form.label :num_legajo, 'NÂº legajo', class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :num_legajo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :apellido, class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :apellido, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :nombre, class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :nombre, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :dni, class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-3">
      <%= form.text_field :dni, class: "form-control" %>
    </div>
    <label class="form-check-inline u-check g-pl-25">
      <input class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" type="checkbox">
      <div class="u-check-icon-checkbox-v4 g-absolute-centered--y g-left-0">
        <i class="fa" data-check-icon="&#xf00c"></i>
      </div>
      Tiene vencimiento
    </label>
    <%= form.label :fecha_vencimiento_dni,"Fecha vencimiento", class: "col-2 col-form-label"%>
    <div class="col-3">
      <%= form.date_field :fecha_vencimiento_dni, class: "form-control rounded-0 form-control-md"%>
    </div>
  </div>

  <div class="form-group g-mb-20">
    <%= form.label :pdf_dni_path, 'DNI PDF'  %><br>
    <%= form.file_field :pdf_dni_path, class:'form-control'%>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :cuil, class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-3">
      <%= form.text_field :cuil, class: "form-control" %>
    </div>
    <div class="col-sm-5">
      <% if @persona.pdf_fecha_nacimiento_path? %>
          <%= form.file_field :pdf_cuil_path, class:'form-control', palceholder: 'tengo algo'%>
        <% else %>
          <%= form.file_field :pdf_cuil_path, class:'form-control'%>
      <% end %>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :fecha_nacimiento, "Fecha nacimiento", class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-3 input-group g-brd-primary--focus">
      <%= form.date_field :pdf_fecha_nacimiento_path, class: "form-control" %>
    </div>
    <div class="col-sm-5">
      <%= form.file_field :pdf_fecha_nacimiento_path, class:'form-control'%>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :nacionalidad, class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :nacionalidad, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :domicilio, class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :domicilio, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :telefono, class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :telefono, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :empresa_id, "Pertenece a: ", class: "col-sm-2 col-form-label g-mb-10" %><br>
    <%= form.select( :empresa_id, @empresas.map{ |c| [c.nombre, c.id] }, {:class => "form-control form-control-md form-control-lg rounded-0 g-mb-10 col-sm-6"})  %>
  </div>
  
  <br>
  <p>
    <%= form.submit 'Registrar', class:"btn btn-success"%>
    <%= link_to 'Cancelar', personas_path(@persona), class: "btn btn-danger" %>
  </p>

<% end %>