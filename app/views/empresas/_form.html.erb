<%= form_for @empresa, :html => {class: "g-brd-around g-brd-gray-light-v4 g-pa-30 g-mb-30", id: 'form_empresa'} do |form| %>
  <div class="form-group row g-mb-10">
    <%= form.label :nombre %><br>
    <%= form.text_field :nombre, class: "form-control" %>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :cuit %><br>
    <%= form.text_field :cuit, class: "form-control" %>
  </div>
  <p>
    <%= form.submit 'Registrar', class:"btn btn-success"%>
    <%= link_to 'Cancelar', empresas_path, class: "btn btn-danger" %>
  </p>
<% end %>