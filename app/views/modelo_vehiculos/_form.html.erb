<%= form_for @modelo, :html => {class: "g-brd-around g-brd-gray-light-v4 g-pa-30 g-mb-30"} do |form| %>

  <div class="form-group row g-mb-10">
    <%= form.label :marca_vehiculo_id, "Modelo(*): ", class: "col-sm-2 col-form-label g-mb-10" %><br>
    <%= form.select( :marca_vehiculo_id, @marcas.map{ |c| [c.marca, c.id] }, {:class => "form-control form-control-md form-control-lg rounded-0 g-mb-10 col-sm-6"})  %>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :modelo, 'Modelo de vehiculo', class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :modelo, class: "form-control" %>
    </div>
  </div>
  <br>
  <p>
    <%= form.submit 'Registrar', class:"btn btn-success"%>
    <%= link_to 'Cancelar', root_path, class: "btn btn-danger" %>
  </p>

<% end %>